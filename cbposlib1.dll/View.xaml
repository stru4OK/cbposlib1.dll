<Window x:Class="BonusSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Ioc="clr-namespace:GalaSoft.MvvmLight.Ioc;assembly=GalaSoft.MvvmLight.Extras"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BonusSystem"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="{Binding title,
                        UpdateSourceTrigger=PropertyChanged}"
        Width="1190"
        Height="600"
        mc:Ignorable="d">
    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0" Color="Beige" />
            <GradientStop FrameworkElement.FlowDirection="RightToLeft" Offset="1" Color="#FFD49B03" />
        </LinearGradientBrush>
    </Window.Background>

    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>

    <Grid>

        <TabControl x:Name="tabControl"
                    Width="1190"
                    Height="600"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
            <TabControl.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="Beige" />
                    <GradientStop FrameworkElement.FlowDirection="RightToLeft" Offset="1" Color="#FFD49B03" />
                </LinearGradientBrush>
            </TabControl.Background>
            <TabItem Width="300"
                     Margin="-2,-2,0,-1"
                     HorizontalAlignment="Left"
                     FontSize="16"
                     Header="Конфигурация библиотеки">
                <TabItem.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#FFF3F3F3" />
                        <GradientStop Offset="0.5" Color="#FFEBEBEB" />
                        <GradientStop Offset="0.5" Color="#FFDDDDDD" />
                        <GradientStop Offset="1" Color="#FFF5BC23" />
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Offset="0" Color="Beige" />
                            <GradientStop FrameworkElement.FlowDirection="RightToLeft" Offset="1" Color="#FFD49B03" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <TextBox x:Name="terminalId"
                             Width="100"
                             Height="26"
                             Margin="148,27,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding terminalId,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Идентификатор терминала, посылающего запросы в процессинг. Уникальное значение терминала в бонусной системе." />
                    <Label x:Name="label"
                           Margin="24,27,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="terminalId"
                           FontSize="12" />
                    <Label x:Name="label2"
                           Margin="146,53,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="числовой код терминала"
                           FontSize="9" />
                    <TextBox x:Name="serverAddrB"
                             Width="290"
                             Height="26"
                             Margin="148,79,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding serverAddr,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Основное адрес бонусного процессинга. Основной канал для отправки запроса в процессинг." />
                    <Label x:Name="serverAddrL"
                           Margin="24,79,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="serverAddr"
                           FontSize="12" />
                    <Label x:Name="serverAddrL2"
                           Margin="148,102,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="основной адрес процессинга"
                           FontSize="9" />
                    <TextBox x:Name="terminalPasswordB"
                             Width="100"
                             Height="26"
                             Margin="148,172,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding terminalPassword,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Пароль для авторизации терминала. Используется для подписывания запросов, отправляемых в процессинг." />
                    <Label x:Name="terminalPasswordL"
                           Margin="24,172,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="terminalPassword"
                           FontSize="12" />
                    <Label x:Name="terminalPasswordL2"
                           Margin="148,191,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="пароль терминала"
                           FontSize="9" />
                    <TextBox x:Name="sslModeB"
                             Width="100"
                             Height="26"
                             Margin="148,213,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding sslMode,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Разрешение режима шифрования SSL при взаимодействии с процессингом. При включенном/выключенном режиме (1/0), адрес должен быть соответствующим (https/http)." />
                    <Label x:Name="sslModeL"
                           Margin="24,213,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="sslMode"
                           FontSize="12" />
                    <Label x:Name="sslMode2"
                           Margin="148,234,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="разрешение режима SSL"
                           FontSize="9" />
                    <Label x:Name="globalBonusOffline1L1"
                           Margin="793,81,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="globalBonusOffline 1"
                           FontSize="12" />
                    <TextBox x:Name="globalBonusOfflineB1"
                             Width="100"
                             Height="26"
                             Margin="935,81,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding globalBonusOffline_1,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Процент бонусирования глобальных бонусов в режиме оффлайн (offlineMode=1) для 1го типа карт." />
                    <Label x:Name="globalBonusOffline1L2"
                           Margin="933,107,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="ставка бонусирования глоб. бонусов в оффлайне"
                           FontSize="9" />
                    <Label x:Name="serverAltAddrL"
                           Margin="24,124,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="serverAltAddr"
                           FontSize="12" />
                    <TextBox x:Name="serverAltAddrB"
                             Width="290"
                             Height="26"
                             Margin="148,124,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding serverAltAddr,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Альтернативный адрес бонусного процессинга для отправки запроса при недоступности (истечение timeout при попытке установить соединение) процессинга по основному адресу." />
                    <Label x:Name="serverAltAddrL2"
                           Margin="148,150,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="альтернативный адрес процессинга"
                           FontSize="9" />
                    <Label x:Name="sslKeyL"
                           Margin="24,256,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="sslKey"
                           FontSize="12" />
                    <TextBox x:Name="sslKeyB"
                             Width="100"
                             Height="26"
                             Margin="148,256,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding sslKey,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Файл с SSL ключом шифрования, который может применяться при включенном SSL режиме (sslMode=1)." />
                    <Label x:Name="sslKeyL2"
                           Margin="148,277,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="SSL-ключ шифрования"
                           FontSize="9" />
                    <Label x:Name="shiftModeL"
                           Margin="24,299,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="shiftMode"
                           FontSize="12" />
                    <TextBox x:Name="shiftModeB"
                             Width="100"
                             Height="26"
                             Margin="148,299,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding shiftMode,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Разрешение режима смен. При данном режиме возможно использование API бонусной библиотеки, отвечающей за открытие/закрытие смены (OpenShift/CloseShift)." />
                    <Label x:Name="shiftModeL2"
                           Width="122"
                           Margin="148,325,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="разрешение режима смен"
                           FontSize="9" />
                    <Label x:Name="hashCardNumL"
                           Margin="24,346,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="hashCardNum"
                           FontSize="12" />
                    <TextBox x:Name="hashCardNumB"
                             Width="100"
                             Height="26"
                             Margin="148,346,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding hashCardNumConfig,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Хэширование номера карты." />
                    <Label x:Name="hashCardNumL2"
                           Margin="148,370,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="разрешение хэширование номера карты"
                           FontSize="9" />
                    <Label x:Name="logSizeL"
                           Margin="461,27,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="logSize"
                           FontSize="12" />
                    <TextBox x:Name="logSizeB"
                             Width="160"
                             Height="26"
                             Margin="595,27,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding logSize,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Указание максимального размера файла лога, котором хранятся записи успешных проведенных запросов, которые используются для составления отчетов (полного или детального)." />
                    <Label x:Name="logSizeL2"
                           Margin="597,53,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="размер лог-файла"
                           FontSize="9" />
                    <Label x:Name="billXMLConvertTableL"
                           Margin="461,79,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="billXMLConvertTable"
                           FontSize="12" />
                    <TextBox x:Name="billXMLConvertTableB"
                             Width="160"
                             Height="26"
                             Margin="593,79,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding billXMLConvertTable,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Конвертер имени продукта в составленном файле чека (bill.jsn или bill.xml) для дальнейшей отправки данного модифицированного файла чека в платежном запросе. Возможные следующие значения: CP1251, KOI8R, UTF8." />
                    <Label x:Name="billXMLConvertTableL2"
                           Margin="597,104,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="формат конвертера файла чека"
                           FontSize="9" />
                    <Label x:Name="timeZoneL"
                           Margin="461,131,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="timeZone"
                           FontSize="12" />
                    <TextBox x:Name="timeZoneB"
                             Width="160"
                             Height="26"
                             Margin="593,131,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding timeZone,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Указание часового пояса местоположения терминала. Используется для синхронизации внутреннего времени терминала со временем процессинга." />
                    <Label x:Name="timeZoneL2"
                           Margin="597,157,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="часовой пояс"
                           FontSize="9" />
                    <Label x:Name="retailNetworkNameL"
                           Margin="461,183,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="retailNetworkName"
                           FontSize="12" />
                    <TextBox x:Name="retailNetworkNameB"
                             Width="160"
                             Height="26"
                             Margin="593,183,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding retailNetworkName,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Название торгово-сетевого предприятия, в которой используется данный терминал. Используется для печати суммы локальных бонусов в чеках Печатается только при разрешении печати локальных бонусов в чеке (noLocalBonusPrint = 0)." />
                    <Label x:Name="retailNetworkNameL2"
                           Margin="597,209,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="название ТСП"
                           FontSize="9" />
                    <Label x:Name="timeoutL"
                           Margin="461,235,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="timeout"
                           FontSize="12" />
                    <TextBox x:Name="timeoutB"
                             Width="158"
                             Height="26"
                             Margin="595,235,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding timeout,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Время таймаута соединения с бонусным процессингом для основного адреса (serverAddr), по истечении которого идет попытка соединения по альтернативному адресу." />
                    <Label x:Name="timeoutL2"
                           Margin="597,261,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="время всего таймаута"
                           FontSize="9" />
                    <Label x:Name="offlineModeL"
                           Margin="461,391,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="offlineMode"
                           FontSize="12" />
                    <TextBox x:Name="offlineModeB"
                             Width="158"
                             Height="26"
                             Margin="595,391,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding offlineMode,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="По истечении таймаута на установку соединения по основному и/или альтернативному каналу при данном включенном режиме будет проведена оффлайновая платежная операция с использованием указанного процента бонусирования по карте данного типа (class_card)." />
                    <Label x:Name="offlineModeL2"
                           Margin="597,416,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="разрешение оффлайновых операций"
                           FontSize="9" />
                    <Label x:Name="orgFeeOfflineL"
                           Margin="793,27,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="orgFeeOffline"
                           FontSize="12" />
                    <TextBox x:Name="orgFeeOfflineB"
                             Width="100"
                             Height="26"
                             Margin="935,27,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding orgFeeOffline,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Процент вознаграждения организатора в режиме оффлайн. Используется при включенном режиме оффлайновых операций (offlineMode=1)." />
                    <Label x:Name="orgFeeOfflineL2"
                           Margin="935,53,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="вознаграждение орг. в оффлайне"
                           FontSize="9" />
                    <Label x:Name="localBonusOffline1L"
                           Margin="793,133,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="localBonusOffline 1"
                           FontSize="12" />
                    <Label x:Name="globalBonusOffline2L"
                           Margin="793,185,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="globalBonusOffline 2"
                           FontSize="12" />
                    <Label x:Name="localBonusOffline2L1"
                           Margin="793,237,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="localBonusOffline 2"
                           FontSize="12" />
                    <Label x:Name="globalBonusOffline5L1"
                           Margin="793,289,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="globalBonusOffline 5"
                           FontSize="12" />
                    <Label x:Name="localBonusOffline5L1"
                           Margin="793,341,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="localBonusOffline 5"
                           FontSize="12" />
                    <TextBox x:Name="localBonusOffline_1"
                             Width="100"
                             Height="26"
                             Margin="935,133,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding localBonusOffline_1,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Процент бонусирования локальных бонусов в режиме оффлайн (offlineMode=1) для 1го типа карт." />
                    <TextBox x:Name="globalBonusOffline_2"
                             Width="100"
                             Height="26"
                             Margin="935,185,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding globalBonusOffline_2,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Процент бонусирования глобальных бонусов в режиме оффлайн (offlineMode=1) для 2го типа карт." />
                    <TextBox x:Name="localBonusOffline_2"
                             Width="100"
                             Height="26"
                             Margin="935,237,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding localBonusOffline_2,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Процент бонусирования локальных бонусов в режиме оффлайн (offlineMode=1) для 2го типа карт." />
                    <TextBox x:Name="globalBonusOffline_5"
                             Width="100"
                             Height="26"
                             Margin="935,289,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding globalBonusOffline_5,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Процент бонусирования глобальных бонусов в режиме оффлайн (offlineMode=1) для 5го типа карт." />
                    <TextBox x:Name="localBonusOffline_5"
                             Width="100"
                             Height="26"
                             Margin="935,341,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="12"
                             Text="{Binding localBonusOffline_5,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             ToolTip="Процент бонусирования локальных бонусов в режиме оффлайн (offlineMode=1) для 5го типа карт." />
                    <Label x:Name="globalBonusOffline1L2_Copy"
                           Margin="933,158,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="ставка бонусирования лок. бонусов в оффлайне"
                           FontSize="9" />
                    <Label x:Name="globalBonusOffline1L2_Copy1"
                           Margin="933,210,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="ставка бонусирования глоб. бонусов в оффлайне"
                           FontSize="9" />
                    <Label x:Name="globalBonusOffline1L2_Copy2"
                           Margin="933,262,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="ставка бонусирования лок. бонусов в оффлайне"
                           FontSize="9" />
                    <Label x:Name="globalBonusOffline1L2_Copy3"
                           Margin="935,314,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="ставка бонусирования глоб. бонусов в оффлайне"
                           FontSize="9" />
                    <Label x:Name="globalBonusOffline1L2_Copy4"
                           Margin="935,366,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="ставка бонусирования лок. бонусов в оффлайне"
                           FontSize="9" />
                    <Button x:Name="SaveConfig"
                            Width="156"
                            Height="43"
                            Margin="922,458,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding SaveConfig}"
                            Content="Сохранить"
                            FontSize="18">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#FFF3F3F3" />
                                <GradientStop Offset="0.5" Color="#FFEBEBEB" />
                                <GradientStop Offset="0.5" Color="#FFDDDDDD" />
                                <GradientStop Offset="1" Color="#FFEABF2E" />
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" />
                        </Button.Effect>
                    </Button>
                    <ComboBox x:Name="comboBox"
                              Width="290"
                              Height="26"
                              Margin="148,458,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              FontSize="14.667"
                              IsReadOnly="True"
                              ItemsSource="{Binding ConfigProfiles}"
                              SelectedIndex="{Binding selectItem}"
                              Text="Профили"
                              ToolTip="Выберете профиль">
                        <ComboBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#FFF3F3F3" />
                                <GradientStop Offset="0.5" Color="#FFEBEBEB" />
                                <GradientStop Offset="0.5" Color="#FFDDDDDD" />
