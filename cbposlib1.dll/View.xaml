                    <TextBox x:Name="EndDate"
                             Width="255"
                             Height="48"
                             Margin="435,390,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontSize="23"
                             RenderTransformOrigin="1.935,3.826"
                             Text="{Binding endDate,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             ToolTip="Укажите конечную дату в формате yyyy-MM-ddTHH24:mi:ss (например 2018-05-19T19:08:00)" />
                    <TextBox x:Name="ReportData"
                             Width="350"
                             Height="431"
                             Margin="786,78,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             FontFamily="Global Monospace"
                             FontSize="13.333"
                             ForceCursor="True"
                             Text="{Binding reportData,
                                            UpdateSourceTrigger=PropertyChanged}"
                             TextAlignment="Justify"
                             TextOptions.TextFormattingMode="Display">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" />
                        </TextBox.Effect>
                    </TextBox>
                    <Button x:Name="SummaryReport"
                            Width="195"
                            Height="80"
                            Margin="85,163,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding SummaryReportOperation}"
                            Content="Итоговый"
                            FontFamily="Tahoma"
                            FontSize="26">
                        <Button.Effect>
                            <DropShadowEffect />
                        </Button.Effect>
                    </Button>
                    <Button x:Name="DetailReport"
                            Width="195"
                            Height="83"
                            Margin="85,355,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding DetailReportOperation}"
                            Content="Детальный"
                            FontFamily="Tahoma"
                            FontSize="26">
                        <Button.Effect>
                            <DropShadowEffect />
                        </Button.Effect>
                    </Button>
                    <Label x:Name="BeginDateL"
                           Width="200"
                           Height="45"
                           Margin="490,148,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="Начальная дата"
                           FontSize="20" />
                    <Label x:Name="EndDateL"
                           Width="200"
                           Height="40"
                           Margin="490,345,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Content="Конечная дата"
                           FontSize="20" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
